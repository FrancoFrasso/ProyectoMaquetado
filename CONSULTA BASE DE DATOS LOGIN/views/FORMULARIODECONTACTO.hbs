<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">

  <title>FORM | Maquetado de Ambos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/FORMULARIO DE CONTACTO.CSS">
  <link rel="icon" href="LOGO-modified.png">


</head>
<section class="registro">
  <h3>FORMULARIO DE CONTACTO</h3>

  <div>
    <form action="" method="post">
      <div class="row">
        <div class="col">
          Nombre Completo
          <input class="controls" type="text" name="Nombres" id="Nombres" placeholder="Ingrese su Nombre">
          <label form="Ciudad">Ciudad</label>
          <input class="controls" type="text" name="ciudad" id="Ciudad" placeholder="Ingrese su Ciudad">
          <label form="Email">Codigo Postal</label>

          <div> <input class="controls" type="Codigo Postal" name="cp" id="CP" placeholder="CP"></div>
        </div>

        <div class="col">
          <label for="Email">Email</label>

          <div> <input class="controls" type="email" name="mail" id="mail" placeholder="Ingrese su E-Mail"></div>
          <label for="Email">Provincia</label>

          <select class="form-select" id="Provincias" required name="provincia">
            <option selected disabled value="">Seleccionar</option>
            <option> Buenos Aires</option>
            <option>Ciudad Autonoma de Buenos Aires</option>
            <option> Catamarca</option>
            <option> Chaco</option>
            <option> Chubut</option>
            <option>Córdoba</option>
            <option>Corrientes</option>
            <option>Entre Ríos</option>
            <option>Formosa</option>
            <option>Jujuy</option>
            <option>La Pampa</option>
            <option> La Rioja</option>
            <option>Mendoza</option>
            <option>Misiones</option>
            <option>Neuquén</option>
            <option>Río Negro</option>
            <option>Salta</option>
            <option>San Juan</option>
            <option>San Luis</option>
            <option>Santa Cruz</option>
            <option> Santa Fe</option>
            <option>Santiago del Estero</option>
            <option>Tierra del Fuego, Antártida e Islas del Atlántico Sur</option>
            <option>Tucumán</option>
          </select>
          <div class="invalid-feedback">
            Seleccione una provincia valida
          </div>
          <label for="Telefono">Telefono</label>

          <div> <input class="controls" type="text" name="numero" id="Tel" placeholder="Ingrese su Numero de Contacto">
          </div>
        </div>
      </div>
      <textarea class="controls" name="mensaje" id="" cols="30" placeholder="Dejanos un Mensaje"></textarea>
      <input class="registrarse" type="submit" value="Enviar">
    {{message}}
    </form>
    
  </div>


</section>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
